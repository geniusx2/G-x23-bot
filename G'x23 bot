    <style>
        :root {
            --primary: #00f7ff;
            --secondary: #ff00e4;
            --bg: #0a0a20;
        }
        body {
            font-family: 'Courier New', monospace;
            background: var(--bg);
            color: white;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }
        #header {
            text-align: center;
            padding: 20px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            border-bottom: 1px solid var(--primary);
        }
        #chat-container {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
            display: flex;
            flex-direction: column;
        }
        .message {
            max-width: 80%;
            margin: 8px;
            padding: 12px;
            border-radius: 12px;
            animation: fadeIn 0.3s;
        }
        .user-message {
            align-self: flex-end;
            background: rgba(0, 247, 255, 0.1);
            border: 1px solid var(--primary);
        }
        .ai-message {
            align-self: flex-start;
            background: rgba(255, 0, 228, 0.1);
            border: 1px solid var(--secondary);
        }
        #input-area {
            display: flex;
